<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.budgetmaster.budgetmaster">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MyMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateIncome"
            android:label="Create Income"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".CreateExpense"
            android:label="Create Expense"
            android:theme="@style/MyMaterialTheme" />
        <activity android:name=".EnterPin"/>
        <activity android:name=".CreateQuestions" />
        <activity android:name=".CreatePin" />
        <activity android:name=".ForgotPIN" />
    </application>

</manifest>